// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String    @id @default(cuid())
  name       String?
  created_at DateTime  @default(now())
  email      String?   @unique
  image      String?
  project    Project[]
  post       Post[]
  like       Like[]
}

model Project {
  id          String   @id @default(cuid())
  title       String
  start_date  DateTime
  end_date    DateTime
  total_date  Int
  week_days   String
  if_then     String?
  database_id String?
  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post        Post[]

  @@index([user_id])
}

model Post {
  id         String   @id @default(cuid())
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    String
  project_id String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  project    Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  like       Like[]

  @@index([user_id])
  @@index([project_id])
}

model Like {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  user_id    String
  post_id    String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([post_id])
}
