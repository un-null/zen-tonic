// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id         String    @id @default(cuid())
  name       String?
  created_at DateTime  @default(now())
  email      String?   @unique
  image      String?
  project    Project[]
  post       Post[]
  like       Like[]
  followers  Follow[]  @relation("asFollowee")
  followees  Follow[]  @relation("asFollower")
}

model Project {
  id          String   @id @default(cuid())
  title       String
  start_date  DateTime
  end_date    DateTime
  total_date  Int
  week_days   String
  if_then     String?
  database_id String?
  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post        Post[]

  @@index([user_id])
}

model Post {
  id         String   @id @default(cuid())
  content    String
  is_done    Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    String
  project_id String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  project    Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  like       Like[]

  @@index([user_id])
  @@index([project_id])
}

model Like {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  user_id    String
  post_id    String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  post       Post     @relation(fields: [post_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([post_id])
}

model Follow {
  id          String  @id @default(cuid())
  follower_id String
  followee_id String
  status      Boolean
  follower    User    @relation("asFollower", fields: [follower_id], references: [id], onDelete: Cascade)
  followee    User    @relation("asFollowee", fields: [followee_id], references: [id], onDelete: Cascade)

  @@index([follower_id])
  @@index([followee_id])
}
